{
    "accounts": {
        "bsonType": "object",
        "required": ["email", "passwordHash", "userTier"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "email": {
                "bsonType": "string",
                "maxLength": 320,
                "minLength": 3
            },
            "passwordHash": {
                "bsonType": "string",
                "maxLength": 32,
                "minLength": 32
            },
            "userTier": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            },
            "currentScheduleId": {
                "bsonType": "objectId"
            },
            "stripeCustomerId": {
                "bsonType": "string",
                "maxLength": 18,
                "minLength": 18
            }
        }
    },

    "pendingAccounts": {
        "bsonType": "object",
        "required": ["dateCreated", "email", "passwordHash"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "dateCreated": {
                "bsonType": "date"
            },
            "email": {
                "bsonType": "string",
                "maxLength": 320,
                "minLength": 3
            },
            "passwordHash": {
                "bsonType": "string",
                "maxLength": 32,
                "minLength": 32
            }
        }
    },

    "onlineAccounts": {
        "bsonType": "object",
        "required": ["accountId", "dateCreated"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "accountId": {
                "bsonType": "objectId"
            },
            "dateCreated": {
                "bsonType": "date"
            }
        }
    },

    "schedules": {
        "bsonType": "object",
        "required": ["accountId", "scheduleName"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "accountId": {
                "bsonType": "objectId"
            },
            "scheduleName": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            },
            "people": {
                "bsonType": "object",
                "maxProperties": 256,
                "patternProperties": {
                    "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$": {
                        "bsonType": "object",
                        "additionalProperties": false,
                        "properties": {
                            "categories": {
                                "bsonType": "object",
                                "maxProperties": 64,
                                "patternProperties": {
                                    "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$": {
                                        "bsonType": "null"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    
    "availabilities": {
        "bsonType": "object",
        "required": ["scheduleId", "personName", "startDate", "milliseconds"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "scheduleId": {
                "bsonType": "objectId"
            },
            "personName": {
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            },
            "startDate": {
                "bsonType": "date"
            },
            "milliseconds": {
                "bsonType": "int",
                "minimum": 0
            },
            "rrule": {
                "bsonType": "string",
                "maxLength": 256
            }
        }
    },

    "pendingEvents": {
        "bsonType": "object",
        "required": ["scheduleId", "startDate", "milliseconds"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "scheduleId": {
                "bsonType": "objectId"
            },
            "startDate": {
                "bsonType": "date"
            },
            "milliseconds": {
                "bsonType": "int",
                "minimum": 0
            },
            "rrule": {
                "bsonType": "string",
                "maxLength": 256
            },
            "eventName": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            },
            "categories": {
                "bsonType": "object",
                "additionalProperties": false,
                "maxProperties": 64,
                "patternProperties": {
                    "^([a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9])$": {
                        "bsonType": "null"
                    }
                }
            }
        }        
    },

    "events": {
        "bsonType": "object",
        "required": ["scheduleId", "startDate", "milliseconds"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "scheduleId": {
                "bsonType": "objectId"
            },
            "startDate": {
                "bsonType": "date"
            },
            "milliseconds": {
                "bsonType": "int",
                "minimum": 0
            },
            "rrule": {
                "bsonType": "string",
                "maxLength": 256
            },
            "eventName": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            },
            "categories": {
                "bsonType": "object",
                "additionalProperties": false,
                "maxProperties": 64,
                "patternProperties": {
                    "^([a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9])$": {
                        "bsonType": "null"
                    }
                }
            },
            "appointee": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9][a-zA-Z0-9 ]{0,126}[a-zA-Z0-9]$"
            }
        }        
    }
}